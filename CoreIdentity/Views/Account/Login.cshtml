@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Login" novalidate="novalidate">
            <h4>Create a new account.</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
            <hr>
            <div class="text-danger validation-summary-valid" data-valmsg-summary="true">
                <ul>
                    <li style="display:none"></li>
                </ul>
            </div>
            <div class="form-group">
                <label asp-for="UserName">Kullanıcı Adı</label>
                <input asp-for="UserName" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" type="password" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="RememberMe">Beni hatırla</label>
                <input asp-for="RememberMe" type="checkbox" class="checkbox" />
            </div>
            <button type="submit" class="btn btn-default">Login</button>
        </form>
    </div>
</div>
